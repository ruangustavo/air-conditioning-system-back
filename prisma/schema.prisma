generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AirConditioner {
  id         Int        @id @default(autoincrement())
  brand      String
  model      String
  state      State[]
  schedules  Schedule[]
  updated_at DateTime   @default(now())
  created_at DateTime   @default(now())

  @@map("air_conditioners")
}

model State {
  id                 Int            @id @default(autoincrement())
  state              Boolean
  air_conditioner    AirConditioner @relation(fields: [air_conditioner_id], references: [id])
  air_conditioner_id Int
  updated_at         DateTime       @default(now())
  created_at         DateTime       @default(now())

  @@map("states")
}

model Schedule {
  id                 Int            @id @default(autoincrement())
  state              Boolean
  start_day_of_week  Int
  end_day_of_week    Int?
  is_recurrent       Boolean        @default(false)
  hour               Int
  minute             Int
  air_conditioner_id Int
  air_conditioner    AirConditioner @relation(fields: [air_conditioner_id], references: [id])
  updated_at         DateTime       @default(now())
  created_at         DateTime       @default(now())

  @@map("schedules")
}
